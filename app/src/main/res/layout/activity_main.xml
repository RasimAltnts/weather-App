<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/afternoon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="359dp"
        android:layout_height="286dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <TextView
            android:id="@+id/tempMaxTextView"
            android:layout_width="74dp"
            android:layout_height="21dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/allan"
            android:gravity="center"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tempretureTextView" />

        <TextView
            android:id="@+id/countryTextView"
            android:layout_width="105dp"
            android:layout_height="32dp"
            android:layout_marginTop="68dp"
            android:fontFamily="@font/allan"
            android:gravity="center|right"
            android:text="TextView"
            android:textColor="#090909"
            android:textColorHint="#F3F0F0"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.188"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mainTextView"
            android:layout_width="107dp"
            android:layout_height="31dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/allan"
            android:gravity="center|right"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.178"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/countryTextView" />

        <TextView
            android:id="@+id/tempretureTextView"
            android:layout_width="91dp"
            android:layout_height="133dp"
            android:layout_marginEnd="76dp"
            android:fontFamily="@font/allan"
            android:gravity="center|right"
            android:text="TextView"
            android:textColor="#151515"
            android:textSize="60sp"
            android:typeface="monospace"
            app:layout_constraintBottom_toBottomOf="@+id/descriptionTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/mainTextView"
            app:layout_constraintTop_toTopOf="@+id/countryTextView" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="109dp"
            android:layout_height="21dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/allan"
            android:gravity="center|right"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.174"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainTextView" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="33dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:foregroundGravity="center"
            android:src="@drawable/santigrat"
            app:layout_constraintStart_toEndOf="@+id/tempretureTextView"
            app:layout_constraintTop_toTopOf="@+id/tempretureTextView" />

        <TextView
            android:id="@+id/tempMinTextView"
            android:layout_width="74dp"
            android:layout_height="21dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/allan"
            android:gravity="center"
            android:text="TextView"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tempMaxTextView"
            app:layout_constraintEnd_toStartOf="@+id/tempMaxTextView"
            app:layout_constraintTop_toTopOf="@+id/tempMaxTextView"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="278dp"
        android:layout_height="46dp"
        android:layout_marginTop="136dp"
        android:fontFamily="@font/allan"
        android:gravity="center"
        android:text="Weather App"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/layout"
        android:id="@+id/infoLayout"
        android:layout_width="351dp"
        android:layout_height="227dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/lastUpdateText"
            android:layout_width="249dp"
            android:layout_height="28dp"
            android:fontFamily="@font/allan"
            android:gravity="center"
            android:text="TextView"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.156"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.919" />

        <TextView
            android:id="@+id/sunriseTextView"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="52dp"
            android:fontFamily="@font/allan"
            android:gravity="bottom|center"
            android:text="TextView"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sunsetTextView"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginTop="52dp"
            android:fontFamily="@font/allan"
            android:gravity="bottom|center"
            android:text="TextView"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.748"
            app:layout_constraintStart_toEndOf="@+id/sunriseTextView"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:src="@drawable/sunsetrise"
            app:layout_constraintBottom_toTopOf="@+id/sunsetTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/windspeedTextView"
            android:layout_width="278dp"
            android:layout_height="27dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/allan"
            android:text="TextView"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sunriseTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>